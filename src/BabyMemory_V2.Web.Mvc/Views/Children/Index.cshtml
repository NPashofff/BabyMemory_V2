    }
    @foreach (var item in Model)
    {
        <div class="card col-6 col-lg-3">
            <img src="@Url.Content("~/Img/"+item.Picture)"
                 class="img-fluid rounded" data-toggle="tooltip" data-placement="bottom" title="Title">
