@model BabyMemory_V2.Model.Childern.ChildrenDto

@{
    ViewData["Title"] = L("EditChild");
}

<h1>@L("EditChild")</h1>

<div class="h-100  d-flex align-items-center justify-content-center">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Budget</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form id="editChildForm" asp-route-returnUrl="@Model" method="post">
                <div class="form-floating">
                    <input asp-for="@Model!.Id" class="form-control" autocomplete="name" readonly hidden />
                    <label asp-for="@Model!.Id"></label>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model!.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="@Model!.Name">@L("Name")</label>
                    <span asp-validation-for="@Model!.Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model!.LastName" class="form-control" autocomplete="lastName" aria-required="true" />
                    <label asp-for="@Model!.LastName">@L("Surname")</label>
                    <span asp-validation-for="@Model!.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model!.BirthDate" class="form-control" autocomplete="birthDate" aria-required="true" />
                    <label asp-for="@Model!.BirthDate">@L("BirthDate")</label>
                    <span asp-validation-for="@Model!.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model!.Picture" class="form-control" aria-required="false" />
                    <label asp-for="@Model!.Picture" style="font-size: small">@L("Picture")</label>
                    <span asp-validation-for="@Model!.Picture" class="text-danger"></span>
                </div>

                <button id="addCildrenSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@L("Edit")</button>
            </form>
        </div>

    </div>

</div>
