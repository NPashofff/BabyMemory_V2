@model BabyMemory_V2.Model.Childern.ChildrenDto
@{
    ViewData["Title"] = L("Profile");
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@L("Profile")</title>
</head>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="card card-secondary mt-2">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle" src="@Url.Content(Model.Picture)" alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center"><a class="btn btn-light" href="/Children/Edit?childrenId=@Model.Id">@Model.Name @Model.LastName</a></h3>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <text>Age</text> <b class="float-right">@Model.Age</b>
                            </li>
                            <li class="list-group-item">
                                <text>Birthday</text> <b class="float-right">@Model.BirthDate.ToString("M")</b>
                            </li>

                        </ul>
                        <a href="/Memory/Add?childrenId=@Model.Id" class="btn btn-secondary btn-block"><b>Add Memory</b></a>
                    </div>
                </div>


                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Procedures :</h3>
                    </div>
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> Health Procedures</strong>
                        <a href="/HealthProcedure/Add?childId=@Model.Id" class="btn btn-secondary btn-block"><b>Add Health Procedure</b></a>
                        <a href="/Medicine/Add?childId=@Model.Id" class="btn btn-secondary btn-block"><b>Add Medicine</b></a>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.HealthProcedures.OrderByDescending(x => x.CreationDate))
                        {
                            <i> @item.CreationDate.Date.ToString("dd-MMMM-yyyy")</i>
                            <a href="/HealthProcedure/Details?heathProcedureId=@item.Id" class="btn btn-block btn-outline-dark">@item.Name</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- The time line -->
                                @foreach (var item in Model.Memories.OrderByDescending(x =>x.CreationDate))
                                {
                                    <div class="timeline">
                                        <div class="time-label">
                                            <span class="bg-green">@item.CreationDate.ToString("D")</span>
                                            <img class="memory-img img-circle" src="@Url.Content("~/Img/"+item.Picture)" alt="...">
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fas fa-clock"></i>@item.CreationDate.ToString("t")</span>
                                                <h2 class="timeline-header"><b>@item.Name</b></h2>
                                                <div class="timeline-body">
                                                    @item.Description

                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-primary btn-sm" href="/Memory/Edit?id=@item.Id">Edit</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END timeline item -->
                                }
                            </div>
                            <!-- /.col -->
                        </div>
                    </ul>

                </div>
            </div>
        </div>
    </div>
</section>


