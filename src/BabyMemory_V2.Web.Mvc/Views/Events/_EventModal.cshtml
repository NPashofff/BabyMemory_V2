@using BabyMemory_V2.Web.Models.Common.Modals
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BabyMemory_V2.Sessions
@using BabyMemory_V2.Event.Dto
@model BabyMemory_V2.Event.Dto.CreateEventDto
@{
    Layout = null;
}

<div class="modal fade" id="EventModal" tabindex="-1" role="dialog" aria-labelledby="EventLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Event")))
            <form name="EventForm" role="form" class="form-horizontal">
                @Html.HiddenFor(x => x.Id)
                <div class="modal-body">
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="edit-Event-details">
                            <div class="form-group row required">
                                <label asp-for="EventDate" class="col-md-3 col-form-label">@L("EventDate")</label>
                                <div class="col-md-9">
                                    <input asp-for="EventDate" class="form-control" required />
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label asp-for="Name" class="col-md-3 col-form-label">@L("Name")</label>
                                <div class="col-md-9">
                                    <input asp-for="Name" class="form-control" type="text" required />
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label asp-for="Description" class="col-md-3 col-form-label">@L("Description")</label>
                                <div class="col-md-9">
                                    <input asp-for="Description" class="form-control" type="text" />
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label asp-for="IsPublic" class="col-md-3 col-form-label">@L("IsPublic")</label>
                                <div class="col-md-9">
                                    <input asp-for="IsPublic" type="checkbox" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
