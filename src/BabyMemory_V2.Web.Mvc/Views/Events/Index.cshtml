@using BabyMemory_V2.Web.Startup
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BabyMemory_V2.Authorization
@{
    ViewBag.Title = L("Events");
    ViewBag.CurrentPageName = PageNames.Events;
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Events/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Events/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">
            </div>
            <div class="col-4">

                <a href="javascript:;" data-toggle="modal" data-target="#EventModal" class="btn bg-blue float-right clear-input-type-number">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>

            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->

                            </div>
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="EventTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="w-25">@L("EventDate")</th>
                                        <th class="w-50">@L("Name")</th>
                                        <th class="w-5">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("~/Views/Events/_EventModal.cshtml")